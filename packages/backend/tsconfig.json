{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2020",
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"strict": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
